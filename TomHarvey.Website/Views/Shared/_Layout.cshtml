<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title | Tom Harvey's Website</title>
        <link href="/content/screen.css" rel="stylesheet" media="screen" />
        <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    </head>
    <body>
        <header>
            <div class="container">
                <div id="logo">
                    <img src="/content/images/logo.png" alt="Tom Harvey's Logo" title="Tom Harvey's Logo" />
                    <h2>iBuildStuff</h2>
                    <h3>Tom Harvey's Personal Website</h3>
                </div>
                <nav>
                    <ul>
                        <li>@Html.ActionLink("home page", "index", "home", null, new { title = "#" })</li>
                        <li>@Html.ActionLink("portfolio", "index", "portfolio", null, new { title = "#" })</li>
                        <li>@Html.ActionLink("services", "index", "services", null, new { title = "#" })</li>
                        <li>@Html.ActionLink("open source", "index", "opensource", null, new { title = "#" })</li>
                        <li>@Html.ActionLink("get in touch", "index", "getintouch", null, new { title = "#" })</li>
                    </ul>
                </nav>
            </div>
            <div class="clear"></div>
        </header>

        <div class="container">
            <section id="content">
                <h1>@ViewBag.Title</h1>

                @RenderBody()

            </section>
            <div id="sidebar">
                
                <!-- TODO: blog specific entries could have like a useful sidebar here for extra links etc. -->
                <!-- TODO: home page could have twitter contents, calls to action etc. -->
                @ViewBag.Sidebar

            </div>
            <div class="clear"></div>

            <footer>
               Tom Harvey &copy; 2011. All Rights Reserved
            </footer>
        </div>
    </body>
</html>